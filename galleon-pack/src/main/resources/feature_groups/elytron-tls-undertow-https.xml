<!-- Elytron TLS subsystem configured with Undertow HTTPS listener -->
<feature-group-spec name="elytron-tls-undertow-https" xmlns="urn:jboss:galleon:feature-group:1.0">
    <feature-group name="elytron-tls">
        <feature spec="subsystem.elytron-tls.server-ssl-context">
            <param name="server-ssl-context" value="elytron-tls-server-context"/>
        </feature>
    </feature-group>
    <feature spec="subsystem.undertow">
        <feature spec="subsystem.undertow.server">
            <param name="server" value="default-server" />
            <feature spec="subsystem.undertow.server.https-listener">
                <param name="https-listener" value="https"/>
                <param name="ssl-context" value="elytron-tls-server-context" />
                <param name="enable-http2" value="true"/>
                <param name="socket-binding" value="https"/>
                <unset param="worker"/>
                <unset param="buffer-pool"/>
            </feature>
        </feature>
    </feature>
</feature-group-spec>
